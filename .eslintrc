{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NEW_WINDOW__" : false
  },
  "rules": {
    "comma-dangle": [1, "always-multiline"],
    "func-names": 0,
    "jsx-quotes": [2, "prefer-double"],
    "key-spacing": 0,
    "new-cap": 0,
    "no-else-return": 0,
    "no-multi-spaces": 0,
    "one-var": 0,
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "space-before-function-paren" : [1, {"anonymous": "always", "named": "never"}],
  }
}
